<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="7dp"
        android:layout_marginVertical="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_action_profile_picture"
            app:border_color="@color/text_color_blue"
            app:border_width="2dp" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@+id/img_user_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfns_text_medium"
                android:textColor="@color/right_navigation_text_color_"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_date_bazaar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfns_text_regular"
                android:textColor="@color/color_name" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_caption_bazaar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/sfns_text_regular"
            android:textColor="@color/right_navigation_text_color_"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/txt_caption_bazaar"
            android:fontFamily="@font/sfns_text_semibold"
            android:textColor="@color/text_color_blue"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/layout_pictures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_price">

            <TextView
                android:id="@+id/txt_details_bazaar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfns_text_regular"
                android:textColor="@color/right_navigation_text_color_" />


            <GridLayout
                android:id="@+id/grid_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_image_4" />

                <ImageView
                    android:id="@+id/img_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_image_3" />

            </GridLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_pictures"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_comment"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/ic_action_interested_grey" />

            <TextView
                android:id="@+id/txt_no_of_interested_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:fontFamily="@font/sfns_text_regular"
                android:textColor="@color/right_navigation_text_color_"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_last_interested_click_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfns_text_light" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>