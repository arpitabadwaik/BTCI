<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_profile"
    tools:context="com.bynry.bpal.ui.activities.ProfileActivity">

    <LinearLayout
        android:id="@+id/linear_layout_app_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/ic_action_background_profile"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back_arrow_profile"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_action_back_arrow" />

        <TextView
            android:id="@+id/txt_user_name_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/sfns_display_medium"
            android:text="Aalok's Profile"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_upper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_app_bar"
        android:layout_marginHorizontal="20dp">

        <RelativeLayout
            android:id="@+id/layout_upper_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_profile_picture"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle_img_profile_picture"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_action_profile_picture" />

            </LinearLayout>

            <ImageView
                android:id="@+id/img_edit_picture"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="80dp"
                android:src="@drawable/ic_action_edit_picture" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/layout_upper_left"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sfns_text_medium"
                    android:text="@string/aalok_dekhane"
                    android:textColor="@color/text_color_blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_single_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_action_single_badge" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfns_text_medium"
                    android:text="@string/email"
                    android:textColor="@color/right_navigation_text_color_" />

                <TextView
                    android:id="@+id/txt_show_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/sfns_text_medium"
                    android:text="aalok.negi@gmail.com"
                    android:textColor="@color/right_navigation_text_color_" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfns_text_medium"
                    android:text="@string/mobile"
                    android:textColor="@color/right_navigation_text_color_" />

                <TextView
                    android:id="@+id/txt_show_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/sfns_text_medium"
                    android:text="+91 9823 23 50 03"
                    android:textColor="@color/right_navigation_text_color_" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfns_text_medium"
                    android:text="@string/interest"
                    android:textColor="@color/right_navigation_text_color_" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/txt_show_interests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/sfns_text_medium"
                        android:maxLines="2"
                        android:text="IOT"
                        android:textColor="@color/right_navigation_text_color_" />

                    <TextView
                        android:id="@+id/txt_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/sfns_text_regular"
                        android:text="@string/more"
                        android:textColor="@color/color_create_profile_btn" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/layout_upper"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/edit_text_line_color" />

    <LinearLayout
        android:id="@+id/layout_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_media_by_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfns_text_medium"
                android:text="@string/media_by_you"
                android:textColor="@color/right_navigation_text_color_"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_media_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfns_text_medium"
                android:text=" (58)"
                android:textColor="@color/right_navigation_text_color_"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_action_image_1" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_action_image_2" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_action_image_3" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_action_image_4" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="@color/edit_text_line_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_lower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_middle"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_posts_by_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfns_text_medium"
            android:text="@string/posts_by_you"
            android:textColor="@color/right_navigation_text_color_"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_posts_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfns_text_medium"
            android:text=" (14)"
            android:textColor="@color/right_navigation_text_color_"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
