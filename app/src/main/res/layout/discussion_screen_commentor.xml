<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_header"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="90dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txt_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfns_text_regular"
                android:textColor="@color/right_navigation_text_color_"
                android:text="A paragraph from the Ancient Greek paragraphs to write beside or written beside"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"/>

        </android.support.v7.widget.CardView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_circle_profile_picture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_profile_picture"
            android:layout_below="@id/card_message"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:id="@+id/linear_layout_name_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_circle_profile_picture"
            android:layout_below="@id/card_message"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vijay Chauhan"
                android:fontFamily="@font/sfns_text_regular"
                android:textColor="@color/right_navigation_text_color_" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.30 AM"
                android:fontFamily="@font/sfns_text_regular"
                android:textColor="@color/right_navigation_text_color_" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>