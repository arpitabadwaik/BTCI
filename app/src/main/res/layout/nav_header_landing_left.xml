<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_action_background_left_navigation_drawer">

    <LinearLayout
        android:id="@+id/linear_layout_profile_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/round_profile_picture_navigation_drawer"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile_picture"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_profile_picture" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_profile_picture"
        android:layout_marginHorizontal="20dp"
        android:text="@string/aalok_dekhane"
        android:textColor="@color/text_color_blue"
        android:textSize="15sp"
        android:fontFamily="@font/sfns_display_medium"
        android:textStyle="bold"/>

    <android.support.v7.widget.AppCompatRatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/linear_layout_profile_picture"
        android:layout_marginTop="35dp" />

</RelativeLayout>