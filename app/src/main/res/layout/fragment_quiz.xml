<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    tools:context="com.bynry.bpal.ui.fragments.QuizFragment">

    <LinearLayout
        android:id="@+id/layout_quiz"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfns_text_medium"
                android:text="@string/QUIZ"
                android:textColor="@color/right_navigation_text_color_"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_date_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfns_text_medium"
                android:text="@string/_17_july_2017"
                android:textColor="@color/right_navigation_text_color_"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_question_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sfns_text_light"
            android:text="fjklgougyijkcvm,b cvklvcujio iugifobjgf ijukbjmfklbmv gijgfkgmbf iogfjklfmblofkb,fm kjkigjopgrjim gjeiorjlgjr rigjrkgjfklgj? "
            android:textColor="@color/right_navigation_text_color_"
            android:textSize="15sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio_option_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/sfns_text_light"
                android:paddingStart="20dp"
                android:backgroundTint="@color/color_create_profile_btn"
                android:text="Option 1"
                android:textColor="@color/right_navigation_text_color_"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/radio_option_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sfns_text_light"
                android:paddingStart="20dp"
                android:text="Option 1"
                android:textColor="@color/right_navigation_text_color_"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/radio_option_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sfns_text_light"
                android:paddingStart="20dp"
                android:text="Option 1"
                android:textColor="@color/right_navigation_text_color_"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/radio_option_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sfns_text_light"
                android:paddingStart="20dp"
                android:text="Option 1"
                android:textColor="@color/right_navigation_text_color_"
                android:textSize="15sp" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_cancel_quiz"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/button_skip"
                android:text="@string/cancel"
                android:textColor="#DC630A" />

            <Button
                android:id="@+id/btn_submit_quiz"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@color/color_create_profile_btn"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
